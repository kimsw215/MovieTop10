<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_rvitem_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_rvitem_thumbnail"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/sherlockjpg" />

        <TextView
            android:id="@+id/tv_rvitem_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            tools:text="1" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_rvitem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="셜록홈즈"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/mcv_rvitem_cardview"
        app:layout_constraintStart_toStartOf="@id/mcv_rvitem_cardview"
        app:layout_constraintEnd_toEndOf="@id/mcv_rvitem_cardview"/>

</androidx.constraintlayout.widget.ConstraintLayout>